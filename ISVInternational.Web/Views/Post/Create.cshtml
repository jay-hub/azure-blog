@model ISVInternational.Entities.DTO.BlogPostDTO

@{
    ViewBag.Title = "Create New Post";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Create New Post</h2>

@using (Html.BeginForm("create", "post", FormMethod.Post))
{

    <div class="form-group">
        <label>Blog Title</label>
        @Html.TextBoxFor(m => m.BlogTitle, new {@class = "form-control"})
    </div>

    <div class="form-group">
        <label>Blog Title</label>
        @Html.TextAreaFor(m => m.Post, new { @class = "form-control", style = "height: 20em;" })
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Post</button>
        </div>
    </div>
}


<script>
    var editor = $("#postMain").data("kendoEditor");

</script>
