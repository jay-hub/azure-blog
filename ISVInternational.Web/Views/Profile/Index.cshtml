@model ISVInternational.Entities.DTO.UserDetailsDto

@{
    ViewBag.Title = "User Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>User Profile</h2>

@using (Html.BeginForm("UpdateProfile", "Profile", FormMethod.Post, new {enctype = "multipart/form-data"}))
{

    <fieldset>
        <div class="form-group">
            <img src="@Model.ProfileUrl" alt="" class="rounded-circle" style="width: 150px; height: 150px"/>

           
        </div>
        <div class="form-group">
            <label for="disabledTextInput">User Email</label>
            @Html.TextBoxFor(m=>m.Email, new { id= "disabledTextInput", @class="form-control disabled"})
        </div>
        <div class="form-group">
            <label for="disabledSelect">Display Name</label>
            @Html.TextBoxFor(m => m.DisplayName, new {@class = "form-control"})
        </div>
        <label class="custom-file">
            @Html.TextBoxFor(m => m.Files, new { type = "file", name = "Files", @class = "custom-file-input" })
            <span class="custom-file-control"></span>
        </label>
        
        <button type="submit" class="btn btn-primary">Submit</button>
    </fieldset>
}